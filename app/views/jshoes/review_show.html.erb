<div class="container">
  <% if !flash[:alert].nil? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
  <% end %>

  <br>
  <br>
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-5 text-right">
      <img src="<%= @post.image_url(:medium) %>">
    </div>
    <div class="col-md-5">
      <p style="font-size:15px;"><strong><%= @post.title %></strong></p>
      <hr>
      <p><%= @post.content %></p>
      
    <hr>
    <% @post.comments.each do |comment| %>
    <p><strong><%= comment.user.id_user %></strong> <%= comment.content %> | <a href="/jshoes/delete_comment_complete/<%= comment.id %>">삭제</a></p>
    <% end %>
    <form action="/jshoes/review_comment_complete" method="post">
    <input type="hidden" name="review_id" value="<%= @post.id %>">
    <% if !@comment_writer.nil? %>
    <p><strong><%= @comment_writer.id_user %></strong> <input type="text" name="comment_content" placeholder="댓글 내용을 입력하세요."> <input type="submit" value="달기"></p>
    <% end %>
    </form>
    <hr>
      <p><a href="/jshoes/edit_review/<%= @post.id %>">수정</a> | <a href="/jshoes/delete_review_complete/<%= @post.id %>">삭제</a></p>
      <p><a href="/jshoes/review">전체 리스트 가기</a></p>
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>

