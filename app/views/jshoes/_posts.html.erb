<br>
<div class="row">
<% @posts.reverse.each do |post| %> 
 <div class="col-xs-6 col-md-3">
   <div class="thumbnail">
     <a href="/jshoes/show/<%= post.id %>"><img src="<%= post.image_url(:thumb) %>" class="img-rounded"></a>
     <div class="caption">
       <span class="label label-warning"><%= post.category %></span>
       <br>
       <a href="/jshoes/show/<%= post.id %>"><strong><%= post.title %></strong></a>
       <hr>
       <span style="color:gray;font-size:12px;"><%= post.content %></span><br>
       <span style="color:gray;font-size:13px;"><strong><%= post.price %>원</strong><br>
     </div>
   </div>
  </div>
<% end %>
</div>

