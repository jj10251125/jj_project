
<% @posts.reverse.each do |post| %>
<div class="panel">
  <div class="row panel-body">
    <div class="col-md-3">
    </div>
    <div class="col-md-3 text-right">
      <a href="/jshoes/show/<%= post.id %>"><img src="<%= post.image_url(:thumb) %>" class="img-rounded"></a>
    </div>
    <div class="col-md-6">
      <h4><a href="/jshoes/show/<%= post.id %>"><%= post.title %></a> </h4>
      <p><span class="label label-warning"><%= post.category %></span></p>
      <p><strong>admin</strong></p>
    </div>
  </div>
</div>
<% end %>
