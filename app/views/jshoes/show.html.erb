          <option value="225">225</option>
          <option value="230">230</option>
          <option value="235">235</option> 
          <option value="240">240</option> 
          <option value="245">245</option>     
          <option value="250">250</option>  
      </select><br>
      <span style="font-size:13px;">주문수량</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <select name="post_size">
          <option value="essential">--- 필수 옵션입니다 ---</option>
          <option value="1">1</option>
          <option value="2">2</option>
      </select><br>
      <hr>

      <input class="btn btn-primary btn-lg" type="submit" value="장바구니">
      <hr>     
      <% if session[:user_id] == 1 %>
      <p><a href="/jshoes/edit/<%= @post.id %>">수정</a> | <a href="/jshoes/delete_complete/<%= @post.id %>">삭제</a><br>
      <% end %>

      <a href="/">전체 리스트 가기</a></p>
     
        <input type="hidden" name="post_id" value="<%= @post.id %>">
      </form>
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>
