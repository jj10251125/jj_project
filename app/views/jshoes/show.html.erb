  <br>
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-5 text-right">
      <img src="<%= @post.image_url(:medium) %>">
    </div>
    <div class="col-md-5">
      <span style="font-size:27px;"><%= @post.title %></span>&nbsp;&nbsp; <span class="label label-danger">New</span>
